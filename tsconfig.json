{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["./types/d.ts"]
    },
    "include": [
        "./src/**/*",
        "./types/**/*",
    ]
}