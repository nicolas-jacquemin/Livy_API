{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ESNext",
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*",
        "./types/**/*",
    ]
}